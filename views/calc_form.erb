<h1>Calculator</h1>
<!-- this is a comment form -->
<p>first - operation - second</p>
<form action="/calc/form" method="get">
  <input type="text" name="first">
  <input type="text" name="operation">
  <input type="text" name="second">
  <button>Calculate</button>
</form>

<p>The <%=@operation%> of <%=@first%> and <%=@second%> is <%=@result%></p>
